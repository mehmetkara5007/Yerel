<body class="login">
    <!-- start: LOGIN -->
    <div class="row">
        <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="logo margin-top-30">
                <img src="~/Content/assets/images/logo.png" alt="Clip-Two" />
            </div>
            <!-- start: LOGIN BOX -->
            <div class="box-login">
                @using (Html.BeginForm())
                {
                    <fieldset>
                        <legend>
                            Sign in to your account
                        </legend>
                        <p class="text-">
                            Please enter your name and password to log in.
                        </p>
                        <div class="form-group">
                            <span class="input-icon">
                                @*<input type="text" class="form-control" name="username" placeholder="Username">*@
                                @Html.TextBoxFor(t => t.User.Name, new { @class = "form-control", placeholder = "Name: Visma" })
                                <i class="fa fa-user"></i>
                                @Html.ValidationMessageFor(t => t.User.Name)
                            </span>
                        </div>
                        <div class="form-group form-actions">
                            <span class="input-icon">
                                @*<input type="password" class="form-control password" name="password" placeholder="Password">*@
                                @Html.PasswordFor(t => t.User.Password, new { @class = "form-control", placeholder = "Password: 123123" })
                                <i class="fa fa-lock"></i>
                                @Html.ValidationMessageFor(t => t.User.Password)
                                <a class="forgot" data-toggle="modal" href="#passforgot">
                                    I forgot my password.
                                </a>
                            </span>
                        </div>
                        <div class="form-actions">
                            <div class="checkbox check-lg">
                                <label>
                                    @Html.CheckBox("beniHatirla") Remember me
                                </label>
                            </div>
                            <button type="submit" class="btn btn-green pull-right">
                                Login <i class="fa fa-arrow-circle-right"></i>
                            </button>
                        </div>
                        <div class="new-account">
                            Don't have an account yet?
                            <a href="@Url.Action("CreateAccount", "Account")">
                                Create an account
                            </a>
                        </div>
                    </fieldset>
                }

                @using (Html.BeginForm("PassForgot", "Account"))
                {
                    <div class="modal fade" id="passforgot" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">I forget password.</h4>
                                    <h5 class="modal-title" id="myModalLabel">Please enter your mail adress.</h5>
                                </div>
                                <div class="modal-body">
                                    <span class="input-icon">
                                        @Html.TextBoxFor(t => t.User.Email, new { @class = "form-control", placeholder = "Email" })
                                        <i class="fa fa-envelope-o"></i>
                                    </span>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-green btn-o" data-dismiss="modal">
                                        Close
                                    </button>
                                    <button type="submit" class="btn btn-light-green">
                                        Send
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="copyright">
                    &copy; <span class="current-year"></span><span class="text-bold text-uppercase"> Verimlilik Uygulamaları </span> <span>designed by mkara</span>
                </div>
                <!-- end: COPYRIGHT -->
            </div>
            <!-- end: LOGIN BOX -->
        </div>
    </div>
    <!-- end: LOGIN -->
    <!-- start: MAIN JAVASCRIPTS -->
    <script src="../Content/vendor/jquery/jquery.min.js"></script>
    @Html.Partial("Notification")
    <script src="../Content/vendor/bootstrap/js/bootstrap.min.js"></script>
