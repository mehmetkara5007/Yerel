@using Yerel.aws.Models
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Visma Software</title>
    <link rel="stylesheet" href="~/Content/css/screen.css" type="text/css" media="screen" title="default" />
    <!--  jquery core -->
    <script src="~/Content/js/jquery/jquery-1.4.1.min.js" type="text/javascript"></script>

    <!-- Custom jquery scripts -->
    <script src="~/Content/js/jquery/custom_jquery.js" type="text/javascript"></script>

    <!-- MUST BE THE LAST SCRIPT IN <HEAD></HEAD></HEAD> png fix -->
    <script src="~/Content/js/jquery/jquery.pngFix.pack.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).pngFix();
        });
    </script>
</head>
<body id="login-bg">

    <!-- Start: login-holder -->
    <div id="login-holder">

        <!-- start logo -->
        <div id="logo-login">
            <a href="index.html"><img src="~/Content/images/shared/logo.png" width="156" height="40" alt="" /></a>
        </div>
        <div class="clear"></div>

        <div id="loginbox">
            <div id="login-inner">

                <table border="0" cellpadding="0" cellspacing="0">
                    @using (Html.BeginForm("Login", "Account"))
                    {
                        @Html.AntiForgeryToken()
                        <tr>
                            <th>Username</th>
                            <td>@Html.TextBoxFor(t => t.EMail, new { @class = "login-inp", placeholder = "email" })</td>
                            @Html.ValidationMessageFor(t => t.EMail)
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>@Html.PasswordFor(t => t.Password, new { @onfocus = "this.value=''", @class = "login-inp", name = "password", type = "password", placeholder = "*****" })</td>
                            @Html.ValidationMessageFor(t => t.Password)
                        </tr>
                        <tr>
                            <th></th>
                            <td valign="top">
                                @Html.CheckBox("loginCheck") Remember me
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td><input type="submit" class="submit-login" /></td>
                        </tr>
                    }
                </table>

            </div>
            <!--  end login-inner -->
            <div class="clear"></div>
            <a href="" class="forgot-pwd">Forgot Password?</a>
        </div>
        <!--  end loginbox -->
        <!--  start forgotbox ................................................................................... -->

        <div id="forgotbox">
            <div id="forgotbox-text">Please send us your email and we'll reset your password.</div>
            <!--  start forgot-inner -->
            <div id="forgot-inner">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <th>Email address:</th>
                        <td><input type="text" value="" class="login-inp" /></td>
                    </tr>
                    <tr>
                        <th> </th>
                        <td><input type="button" class="submit-login" /></td>
                    </tr>
                </table>
            </div>
            <!--  end forgot-inner -->
            <div class="clear"></div>
            <a href="" class="back-login">Back to login</a>
        </div>
        <!--  end forgotbox -->

    </div>
    <!-- End: login-holder -->
</body>
</html>
